<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppBundle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/navigationMenuBarOnMain</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/colorPrimary</item>
        <!--<item name="fontPath">@string/font_main_medium</item>-->
    </style>

    <!--STYLES-->
    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.ActionBar">
        <item name="android:background">@color/colorDefButtonStroke</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="popupTheme">@style/PopupToolbarTheme</item>
    </style>

    <style name="PopupToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/colorPrimaryText</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="colorControlNormal">@color/colorPrimaryText</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorControlHighlight">@android:color/black</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="EditText">
        <item name="android:padding">8dp</item>
        <item name="android:layout_width">242dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/colorPrimaryText</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="colorControlActivated">@android:color/black</item>
        <item name="colorControlHighlight">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <style name="TextLabelWizard" parent="TextLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/acc_wizard_input_margin_side</item>
        <item name="android:layout_marginEnd">@dimen/acc_wizard_input_margin_side</item>
        <item name="android:layout_marginBottom">@dimen/acc_wizard_input_margin_bottom</item>
        <item name="android:paddingBottom">@dimen/acc_wizard_input_padding_bottom</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <!-- Button -->
    <style name="Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/selector_default_btn</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/default_button_text_sel</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
    </style>

    <!-- Button -->
    <style name="ButtonOrange" parent="Button">
        <item name="android:background">@drawable/selector_orange_btn</item>
    </style>

    <style name="ViewLineInProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:layout_marginBottom">6dp</item>
        <item name="android:background">@color/profile_view_line_color</item>
    </style>

    <style name="SettingsMenuItemText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/app_settings_menu_item_padding_side</item>
        <item name="android:paddingEnd">@dimen/app_settings_menu_item_padding_side</item>
        <item name="android:paddingTop">@dimen/app_settings_menu_item_padding_top</item>
        <item name="android:paddingBottom">@dimen/app_settings_menu_item_padding_bottom</item>
        <item name="android:background">@drawable/selector_primary_color</item>
        <item name="android:drawablePadding">@dimen/app_settings_menu_item_padding_drawable</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/app_settings_menu_item_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="SettingsViewLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginStart">@dimen/app_settings_menu_item_padding_side</item>
        <item name="android:layout_marginEnd">@dimen/app_settings_menu_item_padding_side</item>
        <item name="android:background">@color/colorPrimaryLightText</item>
    </style>

    <!-- for BottomNavigationView text size -->
    <style name="bottom_normal_text">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="bottom_selected_text">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="MapProgressBarTheme" parent="AppTheme">
        <item name="colorAccent">@color/colorGreenText</item>
    </style>

    <style name="SettingsBackButton">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">26dp</item>
        <item name="android:layout_margin">18dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="tint">@android:color/black</item>
    </style>

</resources>